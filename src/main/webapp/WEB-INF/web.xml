<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Archetype Created Web Application</display-name>


  <context-param>
    <param-name>tldScanTimeExceededTimeout</param-name>
    <param-value>-1</param-value>
  </context-param>

  <servlet>
    <servlet-name>LandingPage</servlet-name>
    <servlet-class>com.stores.views.LandingPage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddSku</servlet-name>
    <servlet-class>com.stores.views.AddSku</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddToCart</servlet-name>
    <servlet-class>com.stores.views.AddToCart</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewCart</servlet-name>
    <servlet-class>com.stores.views.ViewCart</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewSku</servlet-name>
    <servlet-class>com.stores.views.ViewSku</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Checkout</servlet-name>
    <servlet-class>com.stores.views.Checkout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Orders</servlet-name>
    <servlet-class>com.stores.views.ViewOrder</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LandingPage</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddSku</servlet-name>
    <url-pattern>/productsadd</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddToCart</servlet-name>
    <url-pattern>/addtocart</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ViewCart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewSku</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Checkout</servlet-name>
    <url-pattern>/checkout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Orders</servlet-name>
    <url-pattern>/orders</url-pattern>
  </servlet-mapping>


  <!-- <welcome-file-list>
    <welcome-file>/pol</welcome-file>
  </welcome-file-list> -->


</web-app>